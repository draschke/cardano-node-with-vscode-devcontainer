		"humao.rest-client",
		"iljapostnovs.ui5plugin",
		"jakebathman.mysql-syntax",
		"jhodel.blue-phoenix",
		"jvalecillos.gpg",
		"kenhowardpdx.vscode-gist",
		"leizongmin.node-module-intellisense",
		"mccarter.start-git-bash",
